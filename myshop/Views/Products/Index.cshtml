@model HexaShop.ViewModel.ShopViewModel
<div class="page-heading about-page-heading contact-us" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Check Our Products</h2>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->
<!-- ***** Products Area Starts ***** -->
<section class="section" id="products">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Our Latest Products</h2>
                    <span>Check out all of our products.</span>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @foreach (var product in Model.products)
            {


                <div class="col-lg-4">
                    <div class="item">
                    <div class="thumb">
                        <div class="hover-content">
                            <ul>
                                <li><a  asp-controller="Products" asp-action="SingleProduct" asp-route-id="@product.Id" ><i class="fa fa-eye"></i></a></li>
                               
                                    <li><a asp-controller="Products" asp-action="AddtoCart" asp-route-id="@product.Id"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                            <img src="~/images/newImages/@product.ImagePath" width="300" height="500">
                    </div>
                    <div class="down-content">
                        <h4>@product.Name</h4>
                        <span>$@product.Price.ToString("0.00")</span>
                        <ul class="stars">
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                            <li><i class="fa fa-star"></i></li>
                        </ul>
                    </div>
                </div>
            </div>
            }
         

            </div>
            <div class="col-lg-12">
                <div class="pagination">
                    <ul>
                    @if (Model.CurrentPage != 1)
                    {

                        <li>
                            <a asp-controller="Products" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)">&lt;</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="Products" asp-action="Index" asp-route-page="@(Model.CurrentPage)">&lt;</a>
                        </li>

                    }
                        @for(int i = 1; i <= Model.pages; i++)
                        {
                        if(i==Model.CurrentPage)
                        {
                            <li class="active">
                               <span>@i</span>
                            </li>
                        }
                        else
                        {
                            <li>
                               <a asp-controller="Prooducts" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }
                        }
                    @if (Model.CurrentPage != Model.pages)
                    {
                        <li>
                            <a asp-controller="Products" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">&gt;</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a asp-controller="Products" asp-action="Index" asp-route-page="@(Model.CurrentPage)">&gt;</a>
                        </li>
                    }
                       
                </ul>
                </div>
            </div>
        </div>
  
</section>
