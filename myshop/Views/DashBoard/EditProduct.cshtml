@model HexaShop.Models.Product
@{
    Layout = "_Dashboard";
}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Edit Product</span>
    </div>

    <div>
        <form class="row" method="post" asp-action="EditProduct">
            <input asp-for="Id" type="number" hidden disabled />
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Product Name</label>
                <input type="text"
                       asp-for="Name"
                       asp-validation-for="Name"
                       class="form-control"
                       placeholder="" />

            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="Quantity" class="form-label">Product Quantity</label>
                <input type="number" asp-for="Quantity"
                       class="form-control"
                       asp-validation-for="Quantity"
                       placeholder="" />
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="Price" class="form-label">Product Price</label>
                <input type="number" asp-for="Price"
                       asp-validation-for="Price"
                       class="form-control"
                       placeholder="" />
            </div>

            <div class="mb-3 col-lg-6">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select class="form-select " asp-for="CategoryId">
                    <option selected>Select one</option>
                    <option value="4">Men's</option>
                    <option value="5">Women's</option>
                    <option value="6">Kid's</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="ShopId" class="form-label">Shop</label>
                <select class="form-select " asp-for="ShopId">
                    <option selected>Select one</option>
                    <option selected>Select one</option>
                    <option value="1">Jacket</option>
                    <option value="2">Shirt</option>
                    <option value="3">Pants</option>
                    <option value="4">Dress</option>
                    <option value="5">Pants</option>
                    <option value="6">Tops</option>
                    <option value="7">Sneakers</option>
                    <option value="8">Bags</option>
                    <option value="9">Girls</option>
                    <option value="10">Boys</option>
                </select>
                <span asp-validation-for="ShopId" class="text-danger"></span>
            </div>
             <div class="mb-3 col-lg-6">
                    <label asp-for="Image" class="form-label">Product Price</label>
                    <input asp-for="Image" class="form-control" accept="image/*"/>
                          
                </div>


            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">Submit</button>

            </div>
        </form>

    </div>
</div>
</div>
